<style>
	.gallery {
		display: grid;
		grid-template-columns: repeat(4, 25vh);
		grid-template-rows: repeat(2, 25vh);
		gap: 16px;
		height: 100vh;
		width: 100%;
		align-content: center;
		justify-content: center;

		.gallery__block {
