		/>
	</section>

	<Modal />
</Layout>

<style>
	.gallery {
		display: grid;
		grid-template-columns: repeat(2, 25vh);
		grid-template-rows: repeat(4, 25vh);
		gap: 16px;
		height: 100%;
		width: 100%;
		align-content: center;
		justify-content: center;
		padding-top: 1rem;
		padding-bottom: 1rem;

		@media screen and (width >= 768px) {
			grid-template-columns: repeat(4, 25vh);
			grid-template-rows: repeat(2, 25vh);
			height: 100vh;
		}

		.gallery__block {
			background-color: #000;
			padding: 2rem;
			width: 25vh;
			height: 25vh;
			color: #fff;
			font-size: 2.5rem;
			display: flex;
			justify-content: center;
			align-items: center;
		}
	}
</style>
