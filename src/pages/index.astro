---
import Layout from '../layouts/Layout.astro'
import GalleryItem from '../components/GalleryItem.astro'
import Modal from '../components/Modal.astro'

//	images
import ImageDenji from '../assets/denji.webp'
import ImageDenjiMin from '../assets/denji-min.webp'
import ImagePower from '../assets/power.webp'
import ImagePowerMin from '../assets/power-min.webp'
import ImageAki from '../assets/aki.webp'
