---
import { Image } from 'astro:assets'
import type { ImageMetadata } from "astro"

interface Props {
    image: ImageMetadata,
	title: string,
	dataImage: ImageMetadata,
    dataDescription: string,
}

const { image, title, dataImage, dataDescription  } = Astro.props
---

<a 
	href="#"
	class="gallery__item"
	data-title={title}
	data-image={dataImage}
	data-description={dataDescription}
>
	<Image src={image} alt={title} class="gallery__item__image" />
	<span class="gallery__item__layer"></span>
	<span class="gallery__item__text">{ title }</span>
</a>

<style>
	.gallery__item {
		display: block;
		position: relative;
		overflow: hidden;

		&:hover {
			.gallery__item__layer {
				background-color: #fff;
			}

			.gallery__item__text {
				opacity: 1;
			}
		}

		.gallery__item__image {
			mix-blend-mode: multiply;
			transition: all 0.4s;

			&:hover {
				transform: scale(1.05);
			}
		}

		.gallery__item__layer {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0;
			top: 0;
			transition: background-color 0.4s;
			z-index: -1;
		}

		.gallery__item__text {
			color: #fff;
			position: absolute;
			bottom: 16px;
			right: 50%;
			transform: translateX(50%);
			line-height: 1;
			font-weight: 500;
			background: #000;
			padding: 0.5rem 1rem;
			white-space: nowrap;
			transition: opacity 0.4s;
			opacity: 0;
		}
	}
</style>